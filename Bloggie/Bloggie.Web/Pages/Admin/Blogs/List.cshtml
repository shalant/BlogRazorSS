@page
@model Bloggie.Web.Pages.Admin.Blogs.ListModel
@{
}

@if(Model.BlogPosts != null)
{
    <div class="bg-secondary bg-opacity-10 py-2 mb-">
        <div class="container">
            <h1>Blog Posts</h1>
        </div>
    </div>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Heading</td>
                    <td>View</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model.BlogPosts)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Heading</td>
                        <td><a href="/Admin/Blogs/Edit/@blogPost.Id">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="container">
        <p>No blog posts were found</p>
    </div>
}